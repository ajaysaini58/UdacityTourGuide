<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/list_item_safeguard_padding"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_view_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/list_item_safeguard_padding">

            <ImageView
                android:id="@+id/placeImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageview_height"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/placeNameHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/list_item_place_name_hint"
                android:textSize="@dimen/list_item_place_name_text_size" />

            <TextView
                android:id="@+id/placeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/list_item_short_description_hint"
                android:textSize="@dimen/list_item_place_description_text_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>